h3 修改密码
  small Changepassword

.block-center.mt-xl.wd-xl(ng-controller="ChangePasswordController as reg")
  // START panel
  .panel.panel-dark.panel-flat
    .panel-body
      form.form-validate.mb-lg(role='form', name="reg.changePasswordForm", novalidate='', ng-submit="reg.changePassword()")
        .form-group.has-feedback
          label.text-muted 原密码
          input.form-control(type='password', name="old_password" placeholder='请输入原密码', autocomplete="off", ng-model="reg.account.old_password", required='')
          span.icon-lock.form-control-feedback.text-muted
          span.text-danger(ng-show="reg.changePasswordForm.old_password.$dirty && reg.changePasswordForm.old_password.$error.required") 请输入您的原密码
        .form-group.has-feedback
          label.text-muted 新密码
          input#id-password.form-control(type='password', name="account_password",placeholder="请输入新密码", ng-model="reg.changePassword.password", ng-pattern="/^[a-zA-Z0-9]{6,10}$/",ui-validate="'$value!=reg.account.old_password'" ui-validate-watch="'old_password'" required='')
          span.icon-lock.form-control-feedback.text-muted
          span.text-danger(ng-show="reg.changePasswordForm.account_password.$dirty && reg.changePasswordForm.account_password.$error.validator") 修改的密码不能与原密码相同      
          span.text-danger(ng-show="reg.changePasswordForm.account_password.$dirty && reg.changePasswordForm.account_password.$error.required") 请输入您的新密码
          span.text-danger(ng-show="reg.changePasswordForm.account_password.$dirty && reg.changePasswordForm.account_password.$error.pattern") 密码由英文或数字组成且长度不小于6
        .form-group.has-feedback
          label.text-muted 再次输入
          input.form-control(type='password', name="account_password_confirm",placeholder="再次输入" ng-model="reg.changePassword.account_password_confirm", ui-validate="'$value==reg.changePassword.password'" ui-validate-watch="'password'")
          span.icon-lock.form-control-feedback.text-muted
          span.text-danger(ng-show="reg.changePasswordForm.account_password_confirm.$dirty && reg.changePasswordForm.account_password_confirm.$error.validator") 两次输入密码不一致        
        button.btn.btn-block.btn-primary.mt-lg(type='submit') 修改密码
      
      .alert.alert-danger.text-center(ng-show='reg.authMsg') {{reg.authMsg}}      
      .alert.alert-success.text-center(ng-show='reg.successInfo') {{reg.successInfo}}      
      
